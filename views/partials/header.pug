header.header
    .header__column
        a(href=routes.home)
            i.fab.fa-youtube
    .header__column
        form(action=routes.search, method="get")
            input(type="text", placeholder="Serching keyword", name ="keyword")
    .header__column
        ul
        if !user.isAuthenticated
            li 
                a(href=routes.join) join
            li 
                a(href=routes.login) login
        else 
            li 
                a(href=`/video${routes.upload}`) upload
            li 
                a(href=routes.userDetail(user.id)) userProfile
            li 
                a(href=routes.logout) logout