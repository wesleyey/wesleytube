extends layouts/main

block content
    .form-container
        form(action=routes.upload, method="post")
            label(for="videoFile") Video File
            input(type="file", id="videoFile" name ="videoFile")
            input(type="text" name="title" placeholder="Title")
            textarea(cols="10" rows="4" name="description" placeholder="Description")
            input(type="submit" value="Upload")