extends layouts/main

block content
    .form-container
        form(action=`/video${routes.upload}`, method="post")
            label(for="videoFile") Video File
            input(type="file", id="videoFile" name ="videoFile" required = true)
            input(type="text" name="title" placeholder="Title" required = true)
            textarea(cols="10" rows="4" name="description" placeholder="Description" required = true)
            input(type="submit" value="Upload")