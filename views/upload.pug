extends layouts/main

block content
    .form-container
        .record-container#jsRecordContainer
            video#jsVideoPreview
            button#jsRecordBtn start recording
        form(action=`/video${routes.upload}`, method="post" enctype="multipart/form-data")
            div.fileUpload
                label(for="videoFile") Video File
                input(type="file", id="videoFile" name ="videoFile" required = true accept="video/*")
            input(type="text" name="title" placeholder="Title" required = true)
            textarea(cols="10" rows="4" name="description" placeholder="Description" required = true)
            input(type="submit" value="Upload")