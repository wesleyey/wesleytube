mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1" value="0.5")
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 00:00:00
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
                input.videoPlayer__timeline#jsTimeline(type="range", min="0", max="1", step="0.1" value="0")
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand